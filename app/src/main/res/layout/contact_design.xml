<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:elevation="25dp"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp">

    <RelativeLayout
        android:id="@+id/card_view_relativelayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/video_call_friends_list_notitfy"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:src="@drawable/profile_image"
            android:foreground="@drawable/btn_round"
            android:foregroundTint="#ffffff"
            android:layout_marginTop="10dp"
            >
        </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/video_call_user_name"
            android:text="User Name"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@id/video_call_friends_list_notitfy"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/aladin">

        </TextView>

        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:id="@+id/btn_video_call"
            android:layout_below="@id/video_call_user_name"
            android:layout_marginTop="15dp"
            android:layout_marginRight="65dp"
            android:layout_marginLeft="65dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/accept_btn"
            android:padding="5dp"
            android:drawableTop="@drawable/ic_video_call_black_24dp"
            android:layout_centerHorizontal="true"
            android:drawableTint="#ffffff"

            >
        </Button>


    </RelativeLayout>

</androidx.cardview.widget.CardView>